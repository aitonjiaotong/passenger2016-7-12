<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_dache_jg_order_get_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/dachezuche_linearlayout_selector"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_org_get_car_stores_title"
            style="@style/dachezuche_gray_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="取车门店"/>

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="18dp"
            android:layout_margin="10dp"
            android:background="@color/line_gray"/>

        <TextView
            android:id="@+id/tv_dache_jg_store_name_get"
            style="@style/dachezuche_gray_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>

    <LinearLayout
        android:id="@+id/ll_dache_jg_order_return_car"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dachezuche_linearlayout_selector"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_org_retrun_car_stores_title"
            style="@style/dachezuche_gray_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="还车门店"/>

        <TextView
            android:layout_width="0.5dp"
            android:layout_height="18dp"
            android:layout_margin="10dp"
            android:background="@color/line_gray"/>

        <TextView
            android:id="@+id/tv_dache_jg_store_name_return"
            style="@style/dachezuche_gray_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""/>

    </LinearLayout>

</LinearLayout>